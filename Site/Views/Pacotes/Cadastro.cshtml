@model PacoteDeViagens
@{ViewData["Title"]="Cadastro de pacotes";}
<link rel="stylesheet" href="~/css/PCadastro.css">
<fieldset>
<h2>Cadastro de Pacotes</h2>
<p id="viewbag">@ViewBag.mensagem</p>
<form asp-action="Cadastro" method="post">
    <p><label asp-for="imagem">Busque uma imagem para referencia</label></p>
    <p><input asp-for="imagem" type="file" required></p>
    <p><label asp-for="nome">Nome:</label></p>
    <p><input asp-for="nome" placeholder="Digite o titulo aqui" required></p>
    <p><label asp-for="origem">Origem: </label></p>
    <p><input asp-for="origem" placeholder="Digite a origem aqui" required></p>
    <p><label asp-for="destino">Destino: </label></p>
    <p><input asp-for="destino" placeholder="Digite o destino aqui" required></p>
    <p><label asp-for="atrativo">Atrativo: </label></p>
    <p><textarea asp-for="atrativo" cols="30" rows="10" placeholder="Digite os atrativos aqui"></textarea></p>
    <p><label asp-for="saida">Saida: </label></p>
    <p><input asp-for="saida" placeholder="Digite a saida" required></p>
    <p><label asp-for="retorno">Retorno: </label></p>
    <p><input asp-for="retorno" placeholder="Digite o retorno" required></p>
    <p><a asp-action="Index" asp-controller="Home"><input type="button" value="Cancelar" id="cancelar"></a></p>
    <p><input type="submit" value="Cadastrar" id="cadastro"></p>
    <p id="home_page">@if(ViewBag.mensagem!=null){<a asp-action="Index" asp-controller="Home" id="home_page">Voltar a vitrine</a>}</p>
</form>
</fieldset>