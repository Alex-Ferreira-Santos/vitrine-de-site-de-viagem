@model Usuario 
@{ViewData["Title"]="Cadastro de Usuários";}
<link rel="stylesheet" href="~/css/UCadastro.css">
<fieldset>
<h2>Cadastro de Usuários</h2>
<p id="viewbag">@ViewBag.mensagem</p>
<form asp-action="Cadastro" method="post">
    <p>
        <label asp-for="nome">Nome: </label>
        <input asp-for="nome" placeholder="Digite o nome aqui" required>
    </p>
    <p>
        <label asp-for="nascimento">Nascimento: </label>
        <input asp-for="nascimento" placeholder="Coloque a data de nascimento aqui" required>
    </p>
    <p>
        <label asp-for="login">Login:</label>
        <input asp-for="login" placeholder="Digite o login aqui" required>
    </p>
    <p>
        <label asp-for="senha">Senha: </label>
        <input asp-for="senha" placeholder="Digite a senha aqui" type="password" required>
    </p>
    <p>
        <label asp-for="tipo">Tipo: </label>
        <select asp-for="tipo" required>
            <option value="0">Colaborador</option>
            <option value="1">Administrador</option>
        </select>
    </p>
    <p>
        <input type="submit" value="Cadastrar" id="cadastro">
    </p>
    <p><a asp-action="Index" asp-controller="Home"><input type="button" value="Cancelar" id="cancelar"></a></p>
    <p id="login_page">@if(ViewBag.mensagem!=null){<a asp-action="Login" id="login_page">ir para a pagina de login</a>}</p>
</form>
</fieldset>